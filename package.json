{
  "name": "multichain-seed-sdk",
  "version": "0.1.0",
  "description": "Seed-only, no-encryption SDK to derive addresses for BTC/ETH/BSC/DOGE/LTC/TRX/XRP/SOL from a single mnemonic/seed.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "dev": "node dist/demo.js",
    "test-mnemonic": "node dist/test-mnemonic.js",
    "typecheck": "tsc -p . --noEmit"
  },
  "keywords": ["bip39","bip32","slip44","bitcoin","ethereum","solana","tron","xrp","litecoin","dogecoin","evm","wallet","address"],
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^6.15.0",
    "ripple-address-codec": "^5.0.0",
    "tiny-secp256k1": "^2.2.4",
    "tronweb": "^6.0.4"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}

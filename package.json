{
  "name": "@nawab_kibria/multichain-sdk",
  "version": "0.1.0",
  "description": "Multichain SDK to derive deterministic addresses for BTC/ETH/BSC/DOGE/LTC/TRX/XRP/SOL from a single mnemonic/seed.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "dev": "node dist/demo.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test-mnemonic": "node dist/test-mnemonic.js",
    "typecheck": "tsc -p . --noEmit",
    "prepublishOnly": "npm run build && npm run test:run",
    "prepack": "npm run build",
    "examples": "node examples/basic-usage.js",
    "examples:advanced": "node examples/advanced-derivation.js",
    "examples:typescript": "npx tsc examples/typescript-example.ts --target ES2020 --module ES2020 --outDir examples/dist && node examples/dist/typescript-example.js"
  },
  "keywords": [
    "bip39",
    "bip32",
    "slip44",
    "bitcoin",
    "ethereum",
    "solana",
    "tron",
    "xrp",
    "litecoin",
    "dogecoin",
    "evm",
    "wallet",
    "address",
    "hd-wallet",
    "multichain",
    "cryptocurrency",
    "blockchain",
    "derivation",
    "seed",
    "mnemonic"
  ],
  "license": "MIT",
  "author": {
    "name": "nawab_kibria",
    "email": "nawab_kibria@example.com",
    "url": "https://github.com/nawab69"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nawab69/multichain-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/nawab69/multichain-sdk/issues"
  },
  "homepage": "https://github.com/nawab69/multichain-sdk#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "examples",
    "README.md",
    "REQUIREMENTS.md"
  ],
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "ed25519-hd-key": "^1.3.0",
    "ethers": "^6.15.0",
    "ripple-address-codec": "^5.0.0",
    "tiny-secp256k1": "^2.2.4",
    "tronweb": "^6.0.4"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^2.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  }
}
